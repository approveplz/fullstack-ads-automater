rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /userParameters/{userId} {
      // Allows the read and write operations if the request's auth token UID
      // matches the document ID (which is the user's UID).
      // This ensures that only the authenticated user can access their own data.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}