{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "Node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "allowJs": true,
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": true,
    "include": ["src"]
}
